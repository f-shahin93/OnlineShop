<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".controller.fragments.DetailProductFragment">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider_detail_product"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Iv_share_product"
            android:background="@drawable/ic_share"
            android:padding="10dp"
            android:layout_marginRight="20dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Iv_like_product"
            android:background="@drawable/ic_like"
            android:layout_marginRight="20dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_notification"
            android:id="@+id/Iv_notification_product"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/tv_status_detail_product"
                style="@style/Title_List_Product_Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView" />

            <TextView
                android:id="@+id/textView"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="وضعیت"
                android:layout_margin="5dp"
                android:textDirection="rtl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_price_sale_detail_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="price_sale_detail_product"
                app:layout_constraintBottom_toBottomOf="@+id/tv_price_regular_detail_product"
                app:layout_constraintEnd_toStartOf="@+id/tv_price_regular_detail_product"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_price_regular_detail_product" />

            <TextView
                android:id="@+id/tv_price_regular_detail_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="price_regular_detail_product"
                android:textColor="@android:color/holo_red_dark"
                app:layout_constraintBottom_toTopOf="@id/button_add_to_shopping_cart"
                app:layout_constraintStart_toEndOf="@+id/tv_price_sale_detail_product"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add_to_shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_marginBottom="3dp"
                android:text="افزودن به سبد خرید"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_price_regular_detail_product"
                android:drawableRight="@drawable/ic_add_shopping_cart" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_descriptor_detail_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textDirection="rtl"
        android:padding="5dp"
        android:layout_margin="5dp"
        style="@style/Title_List_Product_Home"
        android:text="@string/hello_blank_fragment" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textDirection="rtl"
            android:padding="10dp"
            android:textSize="14dp"
            style="@style/Title_List_Product_Home"
            android:text="مجموع رای ثبت شده : "/>

        <TextView
            android:id="@+id/tv_rate_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="@style/Title_List_Product_Home"
            android:text="Rate"
            android:textSize="14dp"
            android:drawableLeft="@drawable/ic_favorite"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>
</ScrollView>